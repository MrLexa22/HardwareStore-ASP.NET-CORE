@model OrdersUser                
@if (Model.Orders.Count() > 0)
                {
                    <table class="table custom-table" style=" min-width: 850px;">
                        <thead>
                            <tr>
                                <th scope="col">Номер заказа</th>
                                <th scope="col">Статус заказа</th>
                                <th scope="col">Итоговая сумма</th>
                                <th scope="col">Вкл. НДС</th>
                                <th scope="col">Филиал</th>
                                <th scope="col">Действия</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Orders)
                            {
                            <tr>
                                <td>@item.OrderNumber</td>
                                <td>@item.Category</td>
                                <td>@item.ItogSumma₽</td>
                                <td>@item.Nds₽</td>
                                <td><a target="_blank" href="https://yandex.ru/maps/213/moscow/search/@item.AddressFilial">@item.NameFilial</a></td>
                                <td>
                                        <a asp-controller="Home" asp-action="OrderUser" class="edus" asp-route-id="@item.OrderNumber" style="text-decoration: none; margin-right: 15px;">
                                            К заказу
                                        </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h1>Заказов нету :(</h1>
                }
