@model informationPreOformleine
@{
    ViewData["Title"] = "Проверка заказа";
}

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js" defer></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" defer></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<main class="content-main">
    <div class="con-man">
        <div class="main-div-left">
            <main class="main">
                <header class="page-header">
                    <h1>Проверьте заказ</h1>
                </header>
                @if(Model.tovaris_false.Count() > 0)
                {
                    <h3>Часть товаров отсутвует в наличии. Мы их удалили из корзины, или добавили в список товаров для оформления то количество, которое доступно в филиале</h3>
                    <div class="basket">
                        <div class="basket__row basket__row_header">
                            <div class="basket__col basket__col_image-header"></div>
                            <div class="basket__col basket__col_name">Наименование товара</div>
                            <div class="basket__col basket__col_quanity-header">Количество</div>
                            <div class="basket__col basket__col_quanity-header">Доступно в филиале</div>
                            <div class="basket__col basket__col_price-header">Цена</div>
                        </div>
                   @for (int i =0; i< Model.tovaris_false.Count();i++)
                   {
                       <div style="display:none;">
                                    <input type="text" asp-for="@Model.tovaris_false[i].GoodsId">
                                    <input type="text" asp-for="@Model.tovaris_false[i].Count">
                                    <input type="text" asp-for="@Model.tovaris_false[i].Goods.Cost">
                        </div>
                        <div class="basket-item">
                            <div class="basket__row">
                                <div class="basket__col basket__col_image">
                                    <img src="@Model.tovaris_false[i].Goods.FtppathImage" alt="product image">
                                </div>
                                <div class="basket__col basket__col_name">
                                    <div class="basket-item__name">
                                        <a asp-action="Tovar" asp-controller="Categori" asp-route-id="@Model.tovaris_false[i].GoodsId"><b>@Model.tovaris_false[i].Goods.Manufacture.NameManufacture</b> @Model.tovaris_false[i].Goods.Name</a>
                                    </div>
                                </div>
                                <div class="basket__col basket__col_quanity">
                                    <div class="number-input">
                                        <input readonly="readonly" type="number" class="input number-input__input" min="1" value="@Model.tovaris_false[i].Count" name="product-quantity" data-basket-code="20918014" data-product-id="1577992">
                                    </div>
                                </div>
                                <div class="basket__col basket__col_quanity">
                                    <div class="number-input">
                                        <p style="line-height: 0;">@Model.tovaris_false[i].count_filial</p>
                                    </div>
                                </div>
                                <div class="basket__col basket__col_price">
                                    <div class="basket-price">
                                        @((Model.tovaris_false[i].Count * Convert.ToDouble(Model.tovaris_false[i].Goods.Cost)).ToString())<span class="basket-price__currency">₽</span>
                                    </div>
                                </div>
                            </div>
                       </div>
                    }
                    </div>
                }
                <form asp-action="PostOformlenie" method="post" asp-controller="Korzina">
                    <div class="basket">
                            <div class="basket__row basket__row_header">
                                <div class="basket__col basket__col_image-header"></div>
                                <div class="basket__col basket__col_name">Наименование товара</div>
                                <div class="basket__col basket__col_quanity-header">Количество</div>
                                <div class="basket__col basket__col_price-header">Цена</div>
                            </div>
                            @for (int i =0; i<Model.tovaris_true.Count();i++)
                            {
                                <div style="display:none;">
                                    <input type="text" asp-for="@Model.tovaris_true[i].GoodsId">
                                    <input type="text" asp-for="@Model.tovaris_true[i].Count">
                                    <input type="text" asp-for="@Model.tovaris_true[i].Goods.Cost">
                                </div>
                                <div class="basket-item">
                                    <div class="basket__row">
                                        <div class="basket__col basket__col_image">
                                            <img src="@Model.tovaris_true[i].Goods.FtppathImage" alt="product image">
                                        </div>
                                        <div class="basket__col basket__col_name">
                                            <div class="basket-item__name">
                                                <a asp-action="Tovar" asp-controller="Categori" asp-route-id="@Model.tovaris_true[i].GoodsId"><b>@Model.tovaris_true[i].Goods.Manufacture.NameManufacture</b> @Model.tovaris_true[i].Goods.Name</a>
                                            </div>
                                        </div>
                                        <div class="basket__col basket__col_quanity">
                                            <div class="number-input">
                                                <input readonly="readonly" type="number" class="input number-input__input" value="@Model.tovaris_true[i].Count" name="product-quantity" data-basket-code="20918014" data-product-id="1577992">
                                            </div>
                                        </div>
                                        <div class="basket__col basket__col_price">
                                            <div class="basket-price">
                                                @((Model.tovaris_true[i].Count * Convert.ToDouble(Model.tovaris_true[i].Goods.Cost)).ToString())<span class="basket-price__currency">₽</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="basket__col basket__col_footer">
                                <div style="display:none;">
                                    <input type="text" asp-for="@Model.summa">
                                </div>
                                <div style="text-align:left; margin-left:25px;" class="basket-summary">
                                    <div>Общая стоимость товаров: @Model.summa ₽</div>
                                </div>
                           </div>
                            <div class="card checkout" style="border-radius: 0px; box-shadow: none; margin: 0;">
                                <div class="checkout__title">
                                    <div class="checkout__step">2</div>
                                    Способ получения
                                </div>
                                <div style="display:none;">
                                    <input type="text" asp-for="@Model.Filial.IdFilial">
                                </div>
                                <div id="deliveryContainer">
                                    <div class="profiles-form checkout__profile">
                                        <div class="profiles-form__section">
                                            <div class="profiles-form__title">Филиал</div>
                                                <div class="profiles-form__block" style="width:100%;">
                                                    <div class="form-group profiles-form__input" style="display: flex; width:100%;">
                                                        <label for="gr_@Model.Filial.IdFilial"><b>@Model.Filial.NameFilial</b> (<a href="https://yandex.ru/maps/213/moscow/search/@Model.Filial.AddressFilial" target="_blank">@Model.Filial.AddressFilial</a>)</label>
                                                    </div>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card checkout" style="border-radius: 0px; box-shadow: none;">
                                <div class="checkout__title">
                                    <div class="checkout__step">3</div>
                                    Контактная информация
                                </div>
                                <div class="profiles-form checkout__profile">
                                    <div style="display:none;">
                                        <input type="text" asp-for="@Model.contacts.Contact_Name">
                                    </div>
                                    <div class="profiles-form__section">
                                        <div class="profiles-form__block profiles-form__block_wide">
                                                <div class="form-group profiles-form__input">
                                                    <label class="form-group__label form-group__label_required">
                                                        Контактное лицо
                                                    </label>
                                                    <p class="form-group__input">@Model.contacts.Contact_Name</p>
                                                </div>
                                        </div>

                                        <div class="profiles-form__block">
                                            <div style="display:none;">
                                                <input type="text" asp-for="@Model.contacts.Contact_Email">
                                            </div>
                                            <div class="form-group profiles-form__input">
                                                  <label class="form-group__label form-group__label_required">
                                                        E-mail
                                                    </label>
                                                    <p class="form-group__input" required="">@Model.contacts.Contact_Email</p>
                                            </div>
                                        </div>

                                        <div class="profiles-form__block">
                                            <div style="display:none;">
                                                <input type="text" asp-for="@Model.contacts.Contact_Telefon">
                                            </div>
                                            <div class="form-group profiles-form__input">
                                               <label class="form-group__label form-group__label_required">
                                                    Телефон (моб)
                                                </label>
                                                <p class="form-group__input">@Model.contacts.Contact_Telefon</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @if(Model.tovaris_true.Count()>0)
                            {
                                <div class="basket__row basket__row_footer">
                                    <div class="basket__col basket__col_footer">
                                        <div class="basket-submit">
                                            <input style="background-color: #c62306; border-color: #c62306; color: #fff;" class="btn btn_primary basket-submit__btn" type="submit" value="Оформить заказ">
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                   </form>
            </main>
