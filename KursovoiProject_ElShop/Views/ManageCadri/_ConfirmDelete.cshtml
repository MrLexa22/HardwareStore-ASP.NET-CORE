                $("#prikaz").val("Не указан");
          fetch('api/Workers/@Model.ID_Worker/'+$("#prikaz").val(), { method: 'DELETE' })
            .then(() => {
                $('#panel').load(urls);
                $(".modal-content").remove();
            });
        });
    </script>
</div>
