@model OrderAboutManageOrders
@{
    ViewData["Title"] = "Заказ № "+Model.ID_Order;
}

<script src="~/lib/jQuery-Mask-Plugin-master/dist/jquery.mask.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js" defer></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" defer></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<main class="content-main">
    <div class="con-man">
        <div class="main-div-left">
            <main class="main">
                <header class="page-header">
                    <h1>Заказ № @Model.ID_Order от @Model.DateOrder</h1>
                </header>
                        <div class="basket">
                            <div id="status_order"></div> @*Статус заказа*@
                            <div class="basket__row basket__row_header">
                                <div class="basket__col basket__col_image-header"></div>
                                <div class="basket__col basket__col_name">Наименование товара</div>
                                <div class="basket__col basket__col_quanity-header">Количество</div>
                                <div class="basket__col basket__col_price-header">Цена</div>
                            </div>
                            <div id="panel_cart">@*Состав заказа*@</div> 
                            <div class="card checkout" style="border-radius: 0px; box-shadow: none; margin:0;">
                                <div class="checkout__title">
                                    <div class="checkout__step">2</div>
                                    Способ получения
                                </div>
                                <div id="deliveryContainer">
                                    <div class="profiles-form checkout__profile">
                                        <div class="profiles-form__section">
                                            <div class="profiles-form__title">Филиал</div>
                                                <div class="profiles-form__block" style="width:100%;">
                                                    <div class="form-group profiles-form__input" style="display: flex; width:100%;">
                                                        <label for="gr_@Model.Filial_ID"><b>@Model.FilialName</b> (<a href="https://yandex.ru/maps/213/moscow/search/@Model.FilialAddress" target="_blank">@Model.FilialAddress</a>)</label>
                                                    </div>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card checkout" style="border-radius: 0px; box-shadow: none; margin:0;">
                                <div class="checkout__title">
                                    <div class="checkout__step">3</div>
                                    Контактная информация
                                </div>
                                <div class="profiles-form checkout__profile" id="contactInformation"> @*Контактная информация*@
                                    <div class="profiles-form__section">
                                         <div class="profiles-form__block profiles-form__block_wide">
                                                 <div class="form-group profiles-form__input">
                                                     <label class="form-group__label form-group__label_required">
                                                         Контактное лицо
                                                     </label>
                                                    <input asp-for="@Model.FI" type="text" readonly class="input form-group__input" required="">
                                                 </div>
                                        </div>
                                        <div class="profiles-form__block">
                                             <div class="form-group profiles-form__input">
                                                   <label class="form-group__label form-group__label_required">
                                                         E-mail
                                                     </label>
                                                     <input asp-for="@Model.Email" type="email" readonly class="input form-group__input" required="">
                                             </div>
                                        </div>
                                        <div class="profiles-form__block">
                                            <div class="form-group profiles-form__input">
                                                <label class="form-group__label form-group__label_required">
                                                     Телефон (моб)
                                                 </label>
                                                 <input id="telnam" asp-for="@Model.PhoneNumber" readonly type="tel" class="input form-group__input">
                                             </div>
                                        </div>
                                     </div>
                                </div>
                            </div>
                        </div>
            </main>
        </div>
    </div>
</main>

<link rel="stylesheet" href="~/css/stylekorzina.css">
<script>
    $('#status_order').load('@Url.Action("GetOrderStatus", "ManageOrders", new {id = @Model.ID_Order})');
    $('#panel_cart').load('@Url.Action("GetOrderContainer", "ManageOrders", new {id = @Model.ID_Order})');
</script>

