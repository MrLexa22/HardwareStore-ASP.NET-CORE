                        <td>@item.ID_Good.ToString()</td>
                        <td><a href="/Categori/Tovar/@item.ID_Good">@item.NameGood</a></td>
                        <td>@item.Cost.ToString()₽</td>
                        <td>@item.NameCategory</td>
